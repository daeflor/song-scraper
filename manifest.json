{
"manifest_version": 2,
    "name": "Song Scraper",
    "description": "This extension allows you to view which tracks have been added or removed from the current YouTube Music or Google Play Music playlist.",
    "version": "0.2",
    "content_scripts": [
        {
            "matches": [
                "https://play.google.com/music/listen*",
                "https://music.youtube.com/*"
            ],
            "js": [
                "Scripts/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_action": 
    {
        "default_icon": "Images/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": 
    [
        "storage",
        "tabs",
        "downloads"
    ]
}