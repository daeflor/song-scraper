{
"manifest_version": 2,
    "name": "MusicExtension",
    "description": "This extension tells you which tracks have been added or removed from the current Google Music playlist.",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "https://play.google.com/music/listen*"
            ],
            "js": [
                "Scripts/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_action": 
    {
        "default_icon": "Images/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": 
    [
        "storage",
        "tabs",
        "downloads"
    ]
}