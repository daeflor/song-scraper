{
    "manifest_version": 2,
    "name": "Song Scraper",
    "description": "This extension allows you to view which tracks have been added or removed from the current YouTube Music or Google Play Music playlist.",
    "version": "0.2",
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/playlist*",
                "https://play.google.com/music/listen*"],
            "js": ["Scripts/Content/YouTubeMusicContentScraper.js"],
            "run_at": "document_idle"
        }
    ],
    "page_action": 
    {
        "default_popup": "popup.html",
        "default_icon": {
            "96": "Images/icon_disabled.png"
          }
    },
    "icons": {
        "96": "Images/icon_disabled.png"
      },
    "permissions": 
    [
        "storage",
        "activeTab",
        "downloads",
        "declarativeContent",
        "webNavigation",
        "identity"
    ],
    "content_security_policy":"default-src 'none'; script-src 'self'; connect-src https://www.googleapis.com; style-src-elem https://cdn.firebase.com https://fonts.googleapis.com; font-src https://fonts.gstatic.com",
    "oauth2": {
        "client_id": "1014109245057-69533vc2guqgnk2o0t2phn48hh3hq9go.apps.googleusercontent.com",
        "scopes":["profile"]
      }
}