{
    "manifest_version": 2,
    "name": "Song Scraper",
    "description": "This extension allows you to view which tracks have been added or removed from the current YouTube Music or Google Play Music playlist.",
    "version": "0.2",
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/playlist*",
                //"https://music.youtube.com/songs*", //TODO The reason this doesn't work is that navigating within YouTube Music doesn't trigger reloads, so we need to make sure the content script is injected when ANY YTM page is first loaded. OR find a different way to accomplish this
                //"https://music.youtube.com/uploaded_songs*",
                "https://play.google.com/music/listen*"],
            "js": ["Scripts/Content/YouTubeMusicContentScraper.js"],
            "run_at": "document_idle"
        }
    ],
    "page_action": 
    {
        "default_popup": "popup.html",
        "default_icon": {
            "96": "Images/icon_disabled.png"
          }
    },
    "icons": {
        "96": "Images/icon_disabled.png"
      },
    "permissions": 
    [
        "storage",
        "activeTab",
        "downloads",
        "declarativeContent",
        "webNavigation"
    ],
    "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://apis.google.com; object-src 'self'"
}