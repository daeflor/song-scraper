{
    "manifest_version": 2,
    "name": "Song Scraper",
    "description": "This extension allows you to view which tracks have been added or removed from the current YouTube Music or Google Play Music playlist.",
    "version": "0.2",
    "background": {
        "scripts": ["Scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://play.google.com/music/listen*",
                "https://music.youtube.com/*"
            ],
            "js": [
                "Scripts/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "page_action": 
    {
        "default_popup": "popup.html",
        "default_icon": {
            "96": "Images/icon.png"
          }
    },
    "icons": {
        "96": "Images/icon.png"
      },
    "permissions": 
    [
        "storage",
        "activeTab",
        "downloads",
        "declarativeContent"
    ]
}